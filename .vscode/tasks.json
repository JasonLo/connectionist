{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Release-PyPI",
            "type": "shell",
            "command": "bash",
            "args": [
                "./scripts/release.sh"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "statusbar": {
                    "label": "$(play-circle) Release"
                }
            },
        },
        {
            "label": "gh-pages",
            "type": "shell",
            "command": "mkdocs",
            "args": [
                "gh-deploy",
                "--force"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "statusbar": {
                    "label": "$(play-circle) gh-pages"
                }
            },
        }
    ]
}